{
    "name": "thekeymaster/findologic-api",
    "description": "Library for FINDOLOGIC API requests",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Brader",
            "email": "dominik@brader.co.at",
            "role": "Maintainer"
        },
        {
            "name": "Chris Ortner",
            "email": "chris@codexfons.com",
            "role": "Developer"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "ext-SimpleXML": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5 || ^6.5 || ^7.0",
        "symfony/console": "v3.2.9",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-0": {
            "FINDOLOGIC": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "FINDOLOGIC\\Request\\Tests": "tests/"
        }
    },
    "scripts": {
        "check-code-style": [
            "php-cs-fixer fix --dry-run src",
            "php-cs-fixer fix --dry-run tests"
        ],
        "fix-code-style": [
            "php-cs-fixer fix src",
            "php-cs-fixer fix tests"
        ]
    }
}
